<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="contentBoxTop"><%= user.id %></h3>

      <form class="user-form" action="/users" method="post">
        <fieldset disabled>
          <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label">이름</label>
            <div class="col-sm-9">
              <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="phone" class="col-sm-3 col-form-label">전화번호</label>
            <div class="col-sm-9">
              <input class="form-control" type="text" id="phone" name="phone" value="<%= user.phone %>">
            </div>
          </div>
        </fieldset>
      </form>

      <div>
        <a class="btn btn-primary" href="/users">뒤로</a>
            <% if(isAuthenticated && currentUser.id == user.id){ %> <!-- 1 -->
              <a class="btn btn-primary" href="/users/<%= user.id %>/edit">설정</a>
            <% } %>
    
        <form action="/users/<%= user.id %>?_method=delete" method="post" class="d-inline">
          <a class="btn btn-primary" href="javascript:void(0)" onclick="confirm('삭제 하시겠습니까?')?this.parentElement.submit():null;">삭제</a>
        </form>
      </div>

    </div>
  </body>
</html>
