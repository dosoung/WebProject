<!-- views/user/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('../partials/messages'); %>
    <%- include('../partials/head') %>
    <style>
    </style>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class = 'container mb-3'>
        <form action="/users/register" method="POST">
        <div class ="form-group">
            <label for ="name">Name</label>
            <input type="text" id="name" name="name" value ="<%= typeof name != 'undefined' ? name : '' %>" placeholder="이름을 입력해주세요" class='form-control' style="width:200px;">
        </div>
        <div class ="form-group">
            <label for="id">ID</label>
            <input type ="text" id="id" name="id" value="<%= typeof id != 'undefined' ? id : '' %>" placeholder="ID를 입력해주세요" class="form-control" style="width:200px;">
        </div>
        <div class ="form-group">
                <label for="password">Password</label>
                <input type ="password" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="비밀번호를 입력해주세요" class="form-control"style="width:300px;">
            </div>
        <div class ="form-group">
                <label for="phone">Phone</label>
                <input type ="text" id="phone" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>" placeholder="전화번호를 입력해주세요" class="form-control" style="width:300px;">
            </div>
            <div>
                <button type="submit" class ="btn btn-primary">확인</button>
            </div>
        </form>
    </div>
    
</body>
</html>